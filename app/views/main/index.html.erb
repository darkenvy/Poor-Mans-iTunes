<h1>Richard Poorman's Music Search</h1>

<%= form_tag(root_path, method: 'get') do %>
  <%= label_tag(:term, 'Search') %>
  <%= text_field_tag(:term) %>
  <%= submit_tag('search') %>
<% end %>

<% @data.each do |music| %>
  <div>
    <%= image_tag(music['artworkUrl100']) %>
    <p><%= music['artistName'] %></p>
  </div>
  
  <audio src="<%= music['previewUrl'] %>" controls></audio>

  <a href="<%= music['previewUrl'] %>">
    <%= music['trackName'] %>
  </a>
<% end %>